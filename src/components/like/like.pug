mixin like({ value=0, active=false } = {})
  - const isActive = active ? "like__icon_active" : ""

  button&attributes({
    class: ["like", "js-like"],
    type: "button",
    name: "like",
    tabindex: 0,
  })
    span.like__inner
      span&attributes({
        class: [
          "like__icon",
          "js-like__icon",
          isActive,
        ],
      })
      span&attributes({
        class: ["like__text js-like__text"],
      }) #{value}