mixin like({ icon="", value=0, disable=false })
  -
    const btnDisableClassName = disable ? "like__inactive-border" : ""
    const disableClassName = disable ? "like__inactive" : ""
    icon = disable ? "empty-" + icon : icon 
    const likeIconClass = "like__icon"
    const likeIconType = "like__icon_" + icon

  button&attributes({
    type: "button",
    name: "like",
    class: ["like", `${btnDisableClassName}`, "js-like__button" ]
  })
    span(class=`${disableClassName}`).like__text.js-like__text #{value}
    span.like__button-border
      span&attributes({
        class: [
          likeIconClass,
          disableClassName,
          likeIconType
        ]
      })