mixin chart({ sumOfVote="", legendItems=[] })
  .canvas
    .chart__doughnut
      svg(class="chart" viewBox="0 0 34 30")
        circle(class="unit" r="15.9" cx="50%" cy="50%" stroke="url(#yellow_gradient)")
        circle(class="unit" r="15.9" cx="50%" cy="50%" stroke="url(#purple_gradient)")
        circle(class="unit" r="15.9" cx="50%" cy="50%" stroke="url(#green_gradient)")
        circle(class="unit unit_hidden" r="15.9" cx="50%" cy="50%" stroke="url(#black_gradient)")
        g(class="chart__sum-of-vote" fill="#BC9CFF")
          text(class="sum-of-vote__number" text-anchor="middle" x="50%" y="49%") #{sumOfVote}
          text(class="sum-of-vote__text" text-anchor="middle" x="50%" y="67%") голосов
        linearGradient(id="purple_gradient" x1="60" y1="0" x2="60" y2="120")
          stop(offset="0" stop-color="#BC9CFF")
          stop(offset="1" stop-color="#8BA4F9")
        linearGradient(id="green_gradient" x1="60" y1="0" x2="60" y2="120")
          stop(offset="0" stop-color="#6FCF97")
          stop(offset="1" stop-color="#66D2EA")
        linearGradient(id="yellow_gradient" x1="60" y1="0" x2="60" y2="120")
          stop(offset="0" stop-color="#FFE39C")
          stop(offset="1" stop-color="#FFBA9C")
        linearGradient(id="black_gradient" x1="60" y1="0" x2="60" y2="120")
          stop(offset="0" stop-color="#919191")
          stop(offset="1" stop-color="#3D4975")
    .chart__legend
      ul.legend__list
        each item in legendItems
          li.legend__item #{item.label}