extends ../main.pug
include ../ui-kit-header/ui-kit-header.pug
include ../ui-kit-footer/ui-kit-footer.pug
include ../text-field/text-field.pug
include ../dropdown/dropdown.pug
include ../button/button.pug
include ../radio/radio.pug
include ../toggle/toggle.pug
include ../rating/rating.pug
include ../carousel/carousel.pug
include ../room-review-card/room-review-card.pug
include ../room-number/room-number.pug

block variables
  - var title = "Cards"
  - var description = ""
  - var keywords = ""

block content
  body.cards__wrapper
    .cards__header
      +ui-kit-header()
    main.cards__container
      .cards__content
        .cards__column

          .cards__find-room.cards__block

            h2.cards__title Найдём номера под ваши&nbsp;пожелания
            .find-room__date-dropdown
              label
                .text-field__header
                  span.text-field__title прибытие
                +text-field({
                  classList: [], dropdown: "start",
                  type: "text", placeholder: "ДД.ММ.ГГГГ", size:"small", 
                  name: "date", autocomplete: "off", arrow: true
                })
              label
                .text-field__header
                  span.text-field__title выезд
                +text-field({
                  classList: [], dropdown: "end",
                  type: "text", placeholder: "ДД.ММ.ГГГГ", size:"small", 
                  name: "date", autocomplete: "off", arrow: true
                })

            .find-room__dropdown
              .text-field__header
                span.text-field__title гости
              +dropdown({
                isOpen: false, 
                group: "guests", 
                elements: [
                  {title: "Взрослые", count: 0},
                  {title: "Дети", count: 0}, 
                  {title: "Младенцы", count: 0}
                ]})
            .find-room__button
              +button({ buttonName: "подобрать номер", buttonVariation: "withArrow", textColor: "white", size: "large"})

          .cards__register.cards__block
            h2.cards__title Регистрация аккаунта
            .register__details
              .register__name
                +text-field({ placeholder: "Имя", type: "text", name: "name", autocomplete: "on" })
              .register__surname
                +text-field({ placeholder: "Фамилия", type: "text", name: "surname", autocomplete: "on" })
            .register__radio-buttons
              +radio({ group: "gender", title: "Мужчина", checked: true})
              +radio({ group: "gender", title: "Женщина", checked: false})
            .register__birthday
              .text-field__header
                .text-field__title дата рождения
              +text-field({ classList: ["js-masked__text-field"],placeholder: "ДД.ММ.ГГГГ", type: "text", name: "birthday", autocomplete: "on" })
            .register__login-details
              .text-field__header
                .text-field__title данные для входа в сервис
              .login-details__email
                +text-field({ placeholder: "Email", type: "email", name: "email", autocomplete: "on" })
              .login-details__password
                +text-field({ placeholder: "Пароль", type: "password", name: "password", autocomplete: "on" })
            .register__toggle
              +toggle({ title: "Получать спецпредложения" })
            .register__button
              +button({ buttonName: "перейти к оплате", buttonVariation: "withArrow", textColor: "white", size: "large"})
            .register__question
              span.register__question_text Уже есть аккаунт на Toxin
              .register__question_button
                +button({ buttonName: "войти", buttonVariation: "fillWhite", textColor: "purple", size: "small"})

        .cards-column
          .cards__price-calc.cards__block
            .room-data
              +room-number()
              .room-data__price
                span.room-data__price_value 9 990₽
                span.room-data__price_text в сутки

            .find-room__date-dropdown
              label
                .text-field__header
                  span.text-field__title прибытие
                +text-field({
                  classList: [], dropdown: "start",
                  type: "text", placeholder: "ДД.ММ.ГГГГ", size:"small", 
                  name: "date", autocomplete: "off", arrow: true
                })
              label
                .text-field__header
                  span.text-field__title выезд
                +text-field({
                  classList: [], dropdown: "end",
                  type: "text", placeholder: "ДД.ММ.ГГГГ", size:"small", 
                  name: "date", autocomplete: "off", arrow: true
                })
            .find-room__dropdown
              .text-field__header
                span.text-field__title гости
              +dropdown({
                isOpen: false, 
                group: "guests", 
                elements: [
                  {title: "Взрослые", count: 0},
                  {title: "Дети", count: 0}, 
                  {title: "Младенцы", count: 0}
                ]})
            .price-calc
              .price-calc__days
                span.price-calc__days_value 9 990₽ x 4 суток
                span.price-calc__days_full-value 39 960₽
              .price-calc__service-charge
                span.price-calc__service-charge_text Сбор за услуги: скидка 2 197₽
                div.price-calc__info-icon
                  span.price-calc__info-icon_text i
                span.price-calc__service-charge_full-value 0₽
              .price-calc__additional-services
                span.price-calc__additional-services_text Сбор за дополнительные <br> услуги
                div.price-calc__info-icon
                  span.price-calc__info-icon_text i
                span.price-calc__additional-services_value 300₽

            .total-price
              span.total-price__text Итого
              .total-price__points
              span.total-price__value 38081₽
            .register__button
              +button({ buttonName: "забронировать", buttonVariation: "withArrow", textColor: "white", size: "large"})


          .cards__enter.cards__block
            h2.cards__title Войти
            .register__login-details
              .login-details__email
                +text-field({ placeholder: "Email", type: "email", name: "email", autocomplete: "on" })
              .login-details__password
                +text-field({ placeholder: "Пароль", type: "password", name: "password", autocomplete: "on" })
            .register__button
              +button({ buttonName: "войти", buttonVariation: "withArrow", textColor: "white", size: "large"})
            .register__question
              span.register__question_text Нет аккаунта на Toxin
              .register__question_button
                +button({ buttonName: "создать", buttonVariation: "fillWhite", textColor: "purple", size: "small"})


        .cards__column
          .cards__calendar.cards__block.cards__block_no-border
            +text-field({classList: [ "air-datepicker__inline" ]})

          .cards__room-review
            +room-review-card()

          .cards__room-review
            +room-review-card()

    .cards__footer
      +ui-kit-footer({ footerLinks: [
          { link: "index", name: "Colors & Type" },
          { link: "headers-footers", name: "Headers & Footers" },
          { link: "form-elements", name: "Form Elements" },
          { link: "cards", name: "Cards" },
          { link: "error-page", name: "Landing page" },
        ]})
        