mixin menu-widget({ uiKit=[], sitePages=[] })
  .menu-widget__list.js-menu-widget__list
    ul.menu-widget__list_ui-kit
      each item in uiKit
        li.menu-widget__item
          a(href=`./${item.link}.html` class="menu-widget__text") #{item.title}
    ul.menu-widget__list_pages
      each item in sitePages
        li.menu-widget__item
          a(href=`./${item.link}.html` class="menu-widget__text") #{item.title}

  .menu-widget__images-container.js-menu-widget__images-container
    ul.menu-widget__images
      each item in uiKit
        li.menu-widget__item
          a(href=`./${item.link}.html` class="menu-widget__text") #{item.title}
            img(src=require(`../components/menu-widget/image/${item.image}`).default)
      each item in sitePages
        li.menu-widget__item
          a(href=`./${item.link}.html` class="menu-widget__text") #{item.title}
            img(src=require(`../components/menu-widget/image/${item.image}`).default)