mixin checkbox({ mainTitle="", dropdown=false, rich=false, listItems=[]})

  -
    let titleClassName = "checkbox__title"
    let descriptionClassName = "checkbox__description"

    titleClassName += rich ? "_rich" : ""
    descriptionClassName += rich ? "_rich" : ""

    let isDropdown = dropdown ? "js-checkbox" : ""

  div(class=isDropdown).checkbox
    .checkbox__header
      div.checkbox__title #{mainTitle}
      if dropdown
        .js-checkbox__header_arrow.checkbox__header_arrow-up
    each item in listItems
      label.checkbox__item
        input&attributes({
          class: "checkbox__input",
          type: "checkbox",
          title: item.title,
          checked: item.checked,
        })
        span.checkbox__box
        span(class = titleClassName) #{item.title}
          if rich
            span(class = descriptionClassName) #{item.description}