            {title: "Взрослые", count: 0},
            {title: "Дети", count: 0}, 
            {title: "Младенцы", count: 0}
            ]})
        //----------------------------------------
      form
        h3.font__h3 Toggle
        +toggle({title: "Получать спецпредложения", checked: true})
        +toggle({title: "Получать спецпредложения", checked: false})
        //---------------------------------------
      p 9
      .form
        div.form__header
          h2.form__title Masked text field
          span.form__description Default
        +maskDate({placeholder: "ДД.ММ.ГГГГ", size: "large"})

      form
        h3.font__h3 Like button
        +likeButton({icon: "favorite", value: 2, disable: true})
