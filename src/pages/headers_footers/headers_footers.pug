include ../../blocks/header/header.pug
include ../../blocks/ui-kit-footer/ui-kit-footer.pug

block variables
  - var title = "Headers & Footers"
  - var description = ""
  - var keywords = ""

block content
  body.body-wrapper.body-wrapper__background
    header
      +ui-kit-header()
    main
      .content-wrapper_headers-footers
        .headers-footers__header_sing-in
          +header({})
        .headers-footers__header_logged
          +header({ logged: true, userName: "Юлий Цезарь" })
        .headers-footers__footer
          include ../../blocks/footer/footer.pug
        .headers-footers__footer-mobile
          include ../../blocks/footer-mobile/footer-mobile.pug
    footer
      +ui-kit-footer({ footerLinks: [
        { link: "index", name: "Colors & Type" },
        { link: "headers_footers", name: "Headers & Footers" },
        { link: "form_elements", name: "Form Elements" },
        { link: "cards", name: "Cards" },
        { link: "#", name: "Landing page" },
      ]})